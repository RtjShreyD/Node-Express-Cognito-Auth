<%- include('header') -%>

<div class="text-center center-div" id="login">
    <div class="container border py-4 _rapper" id="_login_rapper">
        <div class="title pb-3"  >
            <img src="/assets/ment-logo.png" alt="Ment Logo">
        </div>
        <h5 >Signup for User</h5>
        <form action="/auth/signup" method="POST" class="pt-3">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="email" name="email">
                    <small class="form-text text-muted text-aling-left _xyz">Register an email address</small>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <button type="submit" class="btn btn-success rounded-pill"> Submit </button>
        </form>
        <small class="form-text text-muted text-aling-left _xyz2 pt-2">---------- or sign up with ----------</small>
        <div class="row pt-4">
            <div class="col-md-12">
                <a class="btn btn-outline-dark"  role="button" href="<%= googlelink %>" style="text-transform:none">
                    <img width="20px" style="margin-bottom:3px; margin-right:5px" alt="Google sign-in"
                        src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
                    Login with Google
                </a>
            </div>
            <p class="pt-4">Already a user? <a href="/">Login</a></p>
        </div>
    </div>
</div>

<%- include('footer') -%>